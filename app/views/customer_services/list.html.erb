<% provide(:title, "Gráficos de Atendimentos") %>
<title><%= yield(:title) %></title>
<%= render 'layouts/searcher' %>
<center>
	<h1>Gráfico de Atendimentos</h1>
	<div class="span8">
    <script>
    	var chart;
    	/*
    		Responsible for converting an object of type Hash to an Array of arrays, where each array represents a pair [key: value].
    	*/
    	function key_value_to_array( hash )	{
				var resp = [];
				for(var key in hash) {
					if( hash.hasOwnProperty(key) )
					{
						resp.push([key, hash[key]]);
					}
				}
				return resp;
			}
			/*
				Draws the uf graph according to the type of calls filtered by user.
			*/
    	function send_type_of_customer_service(type) {
				$.ajax({
					url: "/customer_service/filter_customer_service_by_type",
					type: "GET",
					data: { "type":type },
					success: function(response) {
						var hash = key_value_to_array( response );
						console.log(hash);
						var chart = new Highcharts.Chart({
	            chart: {
                renderTo: 'container',
                type: 'pie',
                options3d: {
                  enabled: true,
                  alpha: 45,
                  beta: 0
                }
	            },

	            title: {
                text: 'Atendimentos por Estado'
	            },

	            tooltip: {
                pointFormat: '{series.name}: <b>{point.percentage:.1f}%</b>'
	            },

	            plotOptions: {
                pie: {
                  allowPointSelect: true,
                  cursor: 'pointer',
                  depth: 35,
                  dataLabels: {
                    enabled: true,
                    format: '{point.name}'
                  }
                }
	            },

	            legend: {
                layout: 'vertical',
                align: 'right',
                verticalAlign: 'top',
                x: -10,
                y: 100,
                borderWidth: 1,
                labelFormatter: function() {
                  if(this.name!='series') {
                    return this.name;
                  } else {
                    return 'Legend';
                  }
                }
	            },

	            series: [{
                showInLegend:true,
                type: 'pie',
                name: 'Atendimentos',
                data: hash
	            }]
		        });
					}
				});
			}
			/*
				Draws the region graph according to the type of calls filtered by user.
			*/
    	function send_type_of_customer_service_region(type){
				$.ajax({
					url: "/customer_service/filter_customer_service_by_type_region",
					type: "GET",
					data: { "type":type },
					success: function(response) {
						var hash = key_value_to_array( response );
						console.log(hash);
						var chart = new Highcharts.Chart({
	            chart: {
                renderTo: 'container_region',
                type: 'pie',
                options3d: {
                    enabled: true,
                    alpha: 45,
                    beta: 0
                }
	            },
	            title: {
                text: 'Atendimentos por Região'
	            },
	            tooltip: {
                pointFormat: '{series.name}: <b>{point.percentage:.1f}%</b>'
	            },
	            plotOptions: {
                pie: {
                  allowPointSelect: true,
                  cursor: 'pointer',
                  depth: 35,
                  dataLabels: {
                    enabled: true,
                    format: '{point.name}'
                  }
                }
	            },
	            legend: {
                layout: 'vertical',
                align: 'right',
                verticalAlign: 'top',
                x: -10,
                y: 100,
                borderWidth: 1,

                labelFormatter: function() {
                  if(this.name!='series') {
                    return this.name;
                  } else {
                    return 'Legend';
                  }
                }
	            },
	            series: [{
                showInLegend:true,
                type: 'pie',
                name: 'Atendimentos',
                data: hash
	            }]
				    });
					}
				});
			}
      $(document).ready(function() {
				$("#service_filter_button").click(function() {
					var type = $("#type_services").val();
					console.log(type);
					send_type_of_customer_service(type);
				});
				$("#service_filter_region_button").click(function()	{
					var type = $("#type_services_region").val();
					console.log(type);
					send_type_of_customer_service_region(type);
				});
        chart = new Highcharts.Chart({
          chart: {
            renderTo: 'container',
            type: 'pie',
            options3d: {
              enabled: true,
              alpha: 45,
              beta: 0
            }
          },
          title: {
            text: 'Atendimentos por Estado'
          },
          tooltip: {
            pointFormat: '{point.}{series.name}: <b>{point.percentage:.1f}%</b>'
          },
          plotOptions: {
            pie: {
              allowPointSelect: true,
              cursor: 'pointer',
              depth: 35,
              dataLabels: {
                  enabled: true,
                  format: '{point.name}'
              }
            }
          },
          legend: {
            layout: 'vertical',
