            borderWidth: 1,
            labelFormatter: function() {
              if(this.name!='series') {
                return this.name;
              } else {
                return 'Legend';
              }
            }
          },
          series: [{
            showInLegend:true,
            type: 'pie',
            name: 'Atendimentos',
            data: <%=raw @hash_uf.map { |key, value| [key, value] } %>
