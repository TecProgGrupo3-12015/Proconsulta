              }
            }
          },

          legend: {
            layout: 'vertical',
            align: 'right',
            verticalAlign: 'top',
            x: -10,
            y: 100,
            borderWidth: 1,

            labelFormatter: function() {
              if(this.name!='series') {
                return this.name;
              } else {
                return 'Legend';
              }
            }
          },

          series: [{
            showInLegend:true,
            type: 'pie',
            name: 'Atendimentos',
            data: <%=raw @hash_region.map { |key, value| [key, value] } %>
          }]
		    });
			});
    </script>
    <div id="container" style="height: 450px"></div>
    <div id="container_region" style="height: 450px"></div>
	</div>
</center>
